<div class="row">
	<div class="col-md-9">
		<div class="content-panel mt" style="min-height: 460px">
			<div class="pull-right" style="padding:4px 10px">
				<button class="btn btn-theme04">New task</button>
			</div>
			<h4>Week time for: <strong>Nicolas Rossi</strong></h4>
			<div style="padding:10px">

				<table class="table table-striped">
					<thead>
						<tr>
							<th>Task</th>
							<th class="col-md-1">Sunday</th>
							<th class="col-md-1">Monday</th>
							<th class="col-md-1">Tuesday</th>
							<th class="col-md-1">Wednesday</th>
							<th class="col-md-1">Thrusday</th>
							<th class="col-md-1">Friday</th>
							<th class="col-md-1">Saturday</th>
							<th class="col-md-1">Totals</th>
						</tr>
					</thead>
					<tbody>
		<%			
					var colors = ["#F7464A","#E2EAE9","#D4CCC5","#949FB1","#4D5360"];
					for(var i=0; i < 5; i++) 
					{ 

		%>			
						<tr>
							<td>
								<i class="fa fa-square fa-fw" style="color:<%=colors[i]%>"></i>
								<strong>Nike</strong> Â·
								Task <%=i%>
							</td>
		<%					for(var d=0; d < 7; d++) { %>
								<td><input type="text" class="form-control input-hours" value="0.00"/></td>
		<% 					} %>	
							<td class="task-total">10.00</td>			
						</tr>
		<%			} %>	
						<tr>			
							<td class="day-total">Totals</td>
		<%					for(var d=0; d < 7; d++) { %>
								<td class="day-total">10.00</td>
		<% 					} %>	
							<td class="week-total">100.00</td>				
						</tr>
					</tbody>
				</table>
			</div>

		</div>
	</div>
	<div class="col-lg-3">
		<div class="green-panel mt pn" style="margin-bottom: 10px">
			<div class="green-header">
				<h5>Week range</h5>
			</div>
			<h2><p>4 Apr to 11 Apr</p></h2>
			<div style="padding-bottom:10px">
				<div class="btn-group">
				  <button type="button" class="btn btn-theme04">Prev</button>
				  <button type="button" class="btn btn-theme04">Go to</button>
				  <button type="button" class="btn btn-theme04">Next</button>
				</div>
			</div>
		</div>
		<div class="darkblue-panel pn" style="margin-bottom: 10px">
			<div class="darkblue-header" style="margin-bottom:0px">
				<h5>Distribution by task</h5>
			</div>
			<canvas id="taskschart" height="100" width="100"></canvas>
		</div>
		<div class="darkblue-panel pn">
			<div class="darkblue-header" style="margin-bottom:0px">
				<h5>Billable hours %</h5>
			</div>
			<canvas id="billablechart" height="100" width="100"></canvas>
		</div>
	</div>
</div>
<style>
.input-hours {
	text-align: right;
}
.day-total, .week-total, .task-total {
	font-size: 16px;
	font-weight: 700;
	text-align: right;
}
.pn {
	height: auto;
}
</style>