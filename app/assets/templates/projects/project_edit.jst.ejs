
<div class="form-panel mt">
	<h4 class="mb">Project information</h4>
	<form class="style-form" method="get" id="project_form">
		<div class="row form-group">
			<div class="col-md-2">
				<label class="control-label">Name</label>
				<input type="text" id="name" name="name" class="form-control">
			</div>
			<div class="col-md-2">
				<label class="control-label">Client</label>
				<select id="client_id" name="client_id" class="form-control">
					<option value=""></option>
				</select>
			</div>
			<div class="col-md-2">
				<label class="control-label">Start date</label>
				<input id="start_date" id="start_date" name="start_date" class="form-control input-medium date-picker" type="text" value="">
			</div>
			<div class="col-md-2">
				<label class="control-label">Deadline</label>
				<input id="deadline" id="deadline" name="deadline" class="form-control input-medium date-picker" type="text" value="">
			</div>
			<div class="col-md-2">
				<label class="control-label">Status</label>
				<select id="active" name="active" class="form-control">
					<option value="true">Active</option>
					<option value="false">Inactive</option>
				</select>
			</div>
			<div class="col-md-2">
				<label class="control-label">Internal</label>
				<select id="internal" name="internal" class="form-control">
					<option value="false">No</option>
					<option value="true">Yes</option>
				</select>
			</div>

		</div>
		<div class="form-group">
			<label class="control-label">Project description</label>
			<textarea id="description" name="description" class="form-control" rows="3"></textarea>
		</div>

		<!-- Tabs -->
		<ul class="nav nav-tabs">
			<li class="active">
				<a id="tasksAnchor" href="#tasks" data-toggle="tab">Tasks</a>
			</li>
			<li id="membersTab">
				<a href="#members" data-toggle="tab">Members</a>
			</li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content" style="padding:10px 0 10px 0">
		  <div class="tab-pane active" id="tasks"></div>
		  <div class="tab-pane" id="members">
		  	<select id="users" multiple="multiple">
		  	</select>
		  </div>
		</div>

	</form>
	<div class="text-center">
		<button id="saveButton" class="btn btn-theme">Save</button>
		<button id="cancelButton" class="btn btn-default">Cancel</button>
	</div>
</div>