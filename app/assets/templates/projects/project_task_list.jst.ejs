<ul class="list-unstyled project-tasks">
	<div style="overflow:hidden">
		<button id="newTask" class="btn btn-theme" style="float:right">+</button>
	</div>
	<%
	for(var i = 0; i < projectTasksCollection.length; i++)
	{
		var projectTask = projectTasksCollection.models[i];
		%>
		<li>
			<div class="row">
				<div class="col-md-6">
					<a href="#" data-task-id="<%=i%>" class="task-name"><%= projectTask.attributes.name %></a>
				</div>
				<div class="col-md-1 text-right">
					<strong><%= projectTask.attributes.hours_planned %> hs</strong>
				</div>
				<div class="col-md-5">
					<div class="progress">
						<div class="progress-bar" role="progressbar" aria-valuenow="<%= projectTask.hours_spent_percentage_top_100() %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= projectTask.hours_spent_percentage_top_100() %>%; background-color:#4ECDC4"><%= projectTask.hours_spent_percentage() %>%</div>
					</div>
				</div>
			</div>
		</li>
		<%
	}
	%>
</ul>
<style>
.project-tasks > li {
	border-bottom: 1px solid whitesmoke;
	padding: 10px;
}
.task-name {
	color: inherit;
}
.progress {
	margin-bottom: 0px;
}
</style>