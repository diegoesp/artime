<ul class="list-unstyled list-inline" id="project_charts">
<!-- SERVER STATUS PANELS -->
<%
	for(var i = 0; i < projectsCollection.length; i++)
	{
		var project = projectsCollection.models[i];
		%>
		<li data-project-id="<%= project.id %>">
			<div class="grey-panel pn donut-chart">
				<div class="grey-header">
					 <h5><%= project.attributes.name %></h5>
				</div>
				<div class="donut-chart-indicator"><%= project.hours_spent_percentage() %>%</div>
				<canvas name="project_status" height="120" width="120"></canvas>
				<div class="row">
					<div class="col-md-10 col-md-offset-1">
						<div style="padding:6px"><%= project.weeks_left() %></div>
						<div class="progress" style="height:16px">
							<div data-project-id="<%= project.id %>" name="progress_bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 40%; background-color:#4ECDC4">
								<span class="sr-only">0 %</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</li>
	<%
	}
%>	
</ul>
<style>
	#project_charts > li {
		cursor: pointer;
		margin-bottom: 10px;
		min-width: 160px;
		position:relative;
		width:24.5%;
	}
	.progress-bar {
		-webkit-box-shadow: none;
		box-shadow: none;
	}
	.donut-chart-indicator {
		position: absolute;
		text-align: center;
		top: 104px;
		font-weight: 900;
		color: #FF6B6B;
		font-size: 20px;
		width: 100%;
		right: 0px;
	}
	#pending {
		color: #fff;
		font-size: 16px;
	}
</style>