<div class="container" style="margin: 40px">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h4 class="title text-center">
				<span>WELCOME BACK !</span>
			</h4>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user"></i></span>
						 <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Username" %>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "Password" %>
					</div>
				</div>
				<div class="form-group">
					<a href="/users/password/new">Forgot your password?</a>
					<div class="pull-right">
						<%= f.check_box :remember_me %> Remember me
					</div>
				</div>
				<div class="form-group text-center">
					<%= f.submit "Sign in", class:"button", style: "width:200px" %>
					<p style="padding-top:30px">Still not registered? <a href="/users/sign_up">Click Here</a> to register now.</p>
				</div>
			<% end %>
		</div><!-- end login -->
		<div class="col-md-3">
		<img src="/assets/cosetti_landing_focus.png" style="height:160px" />
		</div>
	</div><!-- end content -->
</div>
<script>
	$("#jetmenu>li").removeClass("active");
	$("li#sign_in").addClass("active");
</script>
