<style>
.cosetti_form {
	position: absolute;
	width:80px;
	left:20px;
	top: -70px;
}
</style>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1" style="padding: 10% 0">

			<h4 class="title text-center" style="position:relative">
				<img src="/assets/landing_cosetti_signin.png" class="cosetti_form hidden-xs" />
				<span>Change your password</span>
			</h4>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
			  <%= devise_error_messages! %>
			  <%= f.hidden_field :reset_password_token %>


				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control", placeholder: "Password" %>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder: "Confirm new password" %>
					</div>
				</div>
			  	<div class="form-group text-center">
					<%= f.submit "Change my password", class: "button", style: "width:200px" %>
			  	</div>
			<% end %>

		</div><!-- end login -->
	</div><!-- end content -->
</div>
<script>
	$("#jetmenu>li").removeClass("active");
	$("li#sign_in").addClass("active");
</script>
